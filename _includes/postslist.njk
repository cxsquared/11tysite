{% for post in postslist | reverse %}
<div class="blogpost">
	{% if post.data.image %}
	{% set postImgLocation = post.inputPath | inputPathDir %}
	{% image postImgLocation + "/" + post.data.image, post.data.title %}
	{% endif %}

	<div class="bloginfo">
		<h3>
			<a href="{{ post.url }}" class="postlist-link">
				{% if post.data.title %}
				{{ post.data.title }}
				{% else %}
				<code>{{ post.url }}</code>
				{% endif %}
			</a>
		</h3>
		<p>
			{{ post.data.description }}
		</p>
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
			{{ post.date | readableDate("LLLL yyyy") }}
		</time>
	</div>
</div>
{% endfor %}